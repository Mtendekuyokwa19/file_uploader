generator client {
        provider = "prisma-client-js"
        output   = "../generated/prisma"
}

datasource db {
        provider = "postgresql"
        url      = env("DATABASE_URL")
}

model User {
        id       Int      @id @default(autoincrement())
        email    String   @unique
        name     String   @unique @db.VarChar(255)
        password String?
        Folder   Folder[]
}

model Folder {
        id     Int     @id @default(autoincrement())
        title  String  @unique
        url    String?
        User   User?   @relation(fields: [userId], references: [id])
        userId Int?
        Files  File[]
}

model File {
        id       Int     @id @default(autoincrement())
        title    String  @unique
        url      String?
        Folder   Folder? @relation(fields: [folderId], references: [id])
        folderId Int?
}

model Session {
        id        String   @id
        sid       String   @unique
        data      String   @db.VarChar(255)
        expiresAt DateTime
}

